<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFC7C7"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:text="登录"
        android:textColor="@android:color/background_dark"
        android:textSize="60dp" />

    <TextView
        android:layout_width="262dp"
        android:layout_height="33dp"
        android:text="您好，欢迎来到知乎日报!"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_user" />

        <EditText
            android:id="@+id/edit_account"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:hint="请输入账号"
            android:maxLines="1" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_password" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/remember_pass"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_gravity="end"
        android:text="记住密码" />

    <Button
        android:id="@+id/sigh_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="登录" />

    <Button
        android:id="@+id/sigh_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#00000000"
        android:text="没有账号？立即注册"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:text="其它方式登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/sina"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:drawableTop="@drawable/account_sina"
            android:gravity="center"
            android:text="新浪微博登录" />

        <TextView
            android:id="@+id/tencent"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:drawableTop="@drawable/account_tencent"
            android:gravity="center"
            android:text="    腾讯微博登录" />

    </LinearLayout>


</LinearLayout>